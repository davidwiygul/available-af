# provision_q
#!/bin/bash

source provision.config

ssh -T -i $AWS_SSH_KEY ubuntu@$1 << HERE
    sudo apt-get update
#    sudo apt-get upgrade -y
HERE

./rabbit $1

declare -A dict=(
    [q_public_ip]=$1
    [q_user]=$NEWS_QUEUE_USER
    [q_pwd]=$NEWS_QUEUE_PWD
    [q_vhost]=$NEWS_QUEUE_VHOST
    )

for key in ${!dict[@]}; do
    value=${dict[$key]}
    echo $key, $value
    sed -i "s|\(^$key\).*|\1 = $value|" ../heirflow/interface.ini
done
