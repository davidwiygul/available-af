# efs
#!/bin/bash

source provision.config

ssh -T -i $AWS_SSH_KEY ubuntu@$1 << HERE
    if [ ! -d $EFS_PATH ]; then
        sudo mkdir $EFS_PATH
        sudo apt-get install -y nfs-common
    	echo '$EFS_IP:/ $EFS_PATH nfs defaults,_netdev 0 0' | sudo tee -a /etc/fstab
    	sudo mount $EFS_PATH
    	sudo chmod 777 $EFS_PATH/.
    fi

    exit
HERE
