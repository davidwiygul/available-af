# cockroach
#!/bin/bash

source ./provision.config


ssh -T -i $AWS_SSH_KEY ubuntu@$1 << HERE
    sudo apt update
    sudo apt install -y chrony
    sudo sed -i '/# See http.*information./a server 169.254.169.123 prefer iburst minpoll 4 maxpoll 4' /etc/chrony/chrony.conf
    sudo systemctl restart chrony

    wget -qO- https://binaries.cockroachdb.com/cockroach-v19.2.4.linux-amd64.tgz | tar  xvz
    sudo mv cockroach-v19.2.4.linux-amd64/cockroach /usr/local/bin/
    sudo rm -r cockroach-v19.2.4.linux-amd64
    exit
HERE
